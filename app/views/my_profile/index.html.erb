<script type="text/javascript" charset="utf-8">
	var setMapSize = function () {
		var bodyHeight = $('body').height();
		$('#content .bd').height( bodyHeight - 174).width( ($('body').width() - 57) )	
	}
	$(window).resize(function() {
		setMapSize();
	});
	setMapSize();
	$('.smallFollowerIcon').each(function(){
		var rotation = Math.ceil(Math.random()*7)-4
		$(this).addClass('smallShadow').css("-webkit-transform", "rotate("+rotation+"deg)")
	})
	$('#avatar').mouseover(function(){
		$('#updateAvatar').show();
	})
	$('#avatar').mouseout(function(){
		$('#updateAvatar').hide();
	})
	$('#updateAvatar').mouseover(function(){
		$(this).css("background-color", "gray").css("cursor", "pointer")
	})
	$('#updateAvatar').mouseout(function(){
		$(this).css("background-color", "white")
	})
	
</script>
